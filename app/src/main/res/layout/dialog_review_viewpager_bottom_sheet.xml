<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/bottomSheet_btn"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/invisible"
        />

    <TextView
        android:text="More Info"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="20dp" />

    <fragment
        android:id="@+id/bottom_sheet_map"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/default_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp" />
        <TextView
            android:id="@+id/location"
            android:text="This is Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
